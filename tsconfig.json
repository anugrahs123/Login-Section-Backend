{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_module/@types", "./src/types"]
  },
  "include": ["src/**/*", "src/types/**/*.d.ts", "scripts"],
  "exclude": ["node_modules"]
}
